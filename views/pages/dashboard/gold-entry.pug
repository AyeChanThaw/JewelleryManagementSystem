        url: "/api/stock",              
        headers: {"authorization": "Bearer " + token},
        success: function(result){
          stock_data = result.stock[0];     
        }
      });

      // check gold gm is over or not 
      $("#gold_k, #gold_p, #gold_y").change(function(e){
          var gold_k = 0;
          var gold_p = 0;
          var gold_y = 0;


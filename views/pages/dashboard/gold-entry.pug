            gold_k = parseInt($("#gold_k").val());
          }
          if ($('#gold_p').val()){
            gold_p = parseInt($("#gold_p").val());
          }
          if ($('#gold_y').val()){
            gold_y = parseInt($("#gold_y").val());
          }
          $.ajax({
            url: "/services/ChangeKPYToGm?Kyat=" + gold_k.toString() + "&Pae=" + gold_p.toString() + "&Yway=" + gold_y.toString(),              
            headers: {"authorization": "Bearer " + token},
            success: function(result){
              gold_gm = (result.data).toFixed(2);
              if(gold_gm > stock_data.gold_total_gm){
                $("#gold_gm_message").html("Gold Stock is Over!").addClass('text-danger').show();
                submitBtn.setAttribute("disabled", "");

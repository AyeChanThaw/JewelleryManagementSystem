div.modal.fade#dialogRecoverConfirm(tabindex='-1', role='dialog', aria-labelledby='recoverConfirm')
  div.modal-dialog.modal-sm(role='document')
    div.modal-content
      div.modal-header
        h4.modal-title Recover
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') &times;
      div.modal-body
        p Are you sure to recover?
      div.modal-footer
        button.btn.btn-primary#dialogAccept(type='button', data-dismiss='modal') Ok
        button.btn.btn-secondary#dialogCancel(type='button', data-dismiss='modal') Cancel

div.alert.alert-success.alert-dismissible#alertRecoverSuccess(role='alert', style="display:none;")
  strong Success 
  span#recoverSuccessMsg Recover Successful.
  button.close(type='button', data-hide='alert', aria-label='Close')
    span(aria-hidden='true') &times;

div.alert.alert-danger.alert-dismissible#alertRecoverError(role='alert', style="display:none;")
  strong Error 
  span#recoverErrorMsg Can not recover data.
  button.close(type='button', data-hide='alert', aria-label='Close')
    span(aria-hidden='true') &times;
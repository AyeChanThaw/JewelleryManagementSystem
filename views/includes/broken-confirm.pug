div.modal.fade#dialogBrokenConfirm(tabindex='-1', role='dialog', aria-labelledby='brokenConfirm')
  div.modal-dialog.modal-sm(role='document')
    div.modal-content
      div.modal-header
        h4.modal-title Broken
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') &times;
      div.modal-body
        p Broken?
      div.modal-footer
        button.btn.btn-primary#dialogAccept(type='button', data-dismiss='modal') Ok
        button.btn.btn-secondary#dialogCancel(type='button', data-dismiss='modal') Cancel

div.alert.alert-success.alert-dismissible#alertBrokenSuccess(role='alert', style="display:none;")
  strong Success 
  span#BrokenSuccessMsg Broken Successful.
  button.close(type='button', data-hide='alert', aria-label='Close')
    span(aria-hidden='true') &times;

div.alert.alert-danger.alert-dismissible#alertBrokenError(role='alert', style="display:none;")
  strong Error 
  span#brokenErrorMsg Can break data.
  button.close(type='button', data-hide='alert', aria-label='Close')
    span(aria-hidden='true') &times;
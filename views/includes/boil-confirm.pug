div.modal.fade#dialogBoilConfirm(tabindex='-1', role='dialog', aria-labelledby='boilConfirm')
  div.modal-dialog.modal-sm(role='document')
    div.modal-content
      div.modal-header
        h4.modal-title Boil
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') &times;
      div.modal-body
        p Boil?
      div.modal-footer
        button.btn.btn-primary#dialogAccept(type='button', data-dismiss='modal') Ok
        button.btn.btn-secondary#dialogCancel(type='button', data-dismiss='modal') Cancel

div.alert.alert-success.alert-dismissible#alertBoilSuccess(role='alert', style="display:none;")
  strong Success 
  span#BoilSuccessMsg Boil Successful.
  button.close(type='button', data-hide='alert', aria-label='Close')
    span(aria-hidden='true') &times;

div.alert.alert-danger.alert-dismissible#alertBoilError(role='alert', style="display:none;")
  strong Error 
  span#boilErrorMsg Can not boil.
  button.close(type='button', data-hide='alert', aria-label='Close')
    span(aria-hidden='true') &times;